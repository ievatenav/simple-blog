<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Edit Post</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[img]" value="<%= blog.img %>">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="blog[body]" required><%= blog.body %></textarea>
        </div>
        <input class="ui violet basic button" type="submit" value="Submit">
    </form>
</div>

<% include partials/footer %>
<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Simple Blog</div>
    <div class="ui top attached">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.img %>">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description"><%- blog.body.substring(0, 300) %>...</div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">Read More<i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include partials/footer %>

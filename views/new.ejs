<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[img]" placeholder="image">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="blog[body]" required></textarea>
        </div>
        <input class="ui violet basic button" type="submit" value="Submit">
    </form>
</div>

